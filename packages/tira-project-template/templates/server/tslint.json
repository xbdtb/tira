{
  "extends": ["tslint-plugin-prettier"],
  "linterOptions": {
    "exclude": ["**/node_modules/**", "**/dist/**", "**/*.d.ts", "**/public/**"]
  },
  "rules": {
    "prettier": [
      true,
      {
        "printWidth": 120,
        "semi": true,
        "singleQuote": true,
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "trailingComma": "all",
        "arrowParens": "always"
      }
    ]
  }
}
